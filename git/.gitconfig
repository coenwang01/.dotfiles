[user]
	name = johnson
	email = huwqchn@gmail.com
[credential]
	helper = store
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
  ui = true
[alias]
  st = status -sb
  co = checkout
  c = commit --short
  ci = commit --short
  p = push
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate --date=short
[core]
  pager = delta
[interactive]
  diffFilter = delta --color-only
[include]
  path = ~/.local/share/nvim/lazy/tokyonight.nvim/extras/delta/tokyonight_storm.gitconfig
[delta]
  navigate = true    # use n and N to move between diff sections
  light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  side-by-side = false
  line-numbers = true
  syntax-theme = tokyonight_storm
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[pull]
  ff = only
	rebase = true
[github]
  user = huwqchn
[init]
  defaultBranch = main
; [commit]
;   gpgsign = true
[rebase]
	autoStash = true
