# when selecting text with mouth, copy to clipboard
set selection-clipboard clipboard

# keep several lines of text when scrolling a screenful
set scroll-full-overlap 0.2

set scroll-page-aware true
set window-title-basename true
set adjust-open width
set statusbar-home-tilde true
set vertical-center true
set synctex true

set font "JetBrains Mono Nerd font Bold 12"
set zoom-step 3

set default-bg "#1a1b26"

set statusbar-bg "#282e49"

set statusbar-fg "#7aa2f7"

set inputbar-bg "#1a1b26"

set inputbar-fg "#7aa2f7"

set completion-bg "#1a1b26"

set completion-fg "#5b668e"

set completion-highlight-bg "#282e49"

set completion-highlight-fg "#7aa2f7"

set completion-group-bg "#32333e"


map [normal] n scroll left
map [normal] i scroll right
map [normal] e scroll down
map [normal] u scroll up
map [normal] <C-e> bisect backward
map [normal] <C-u> bisect forward
map [normal] <A-n> scroll half-left
map [normal] <A-i> scroll half-right
map [normal] <A-e> scroll half-down
map [normal] <A-u> scroll half-up
map [normal] j jumplist forward
map [normal] J jumplist backward
map [normal] E navigate next
map [normal] U navigate previous
map [normal] b toggle_statusbar
map [normal] <Tab> toggle_index
map [normal] k focus_inputbar
map [normal] - search forward
map [normal] = search backward
map [normal] <C--> zoom out
map [normal] <C-=> zoom in
map [normal] <C-p> toggle_presentation
map [normal] <C-f> toggle_fullscreen
map [fullscreen] q toggle_fullscreen
map [fullscreen] n scroll left
map [fullscreen] i scroll right
map [fullscreen] e scroll down
map [fullscreen] u scroll up
map [fullscreen] <C-e> bisect backward
map [fullscreen] <C-u> bisect forward
map [fullscreen] <A-n> scroll half-left
map [fullscreen] <A-i> scroll half-right
map [fullscreen] <A-e> scroll half-down
map [fullscreen] <A-u> scroll half-up
map [fullscreen] j jumplist forward
map [fullscreen] J jumplist backward
map [fullscreen] E navigate next
map [fullscreen] U navigate previous
map [fullscreen] b toggle_statusbar
map [fullscreen] <Tab> toggle_index
map [fullscreen] k focus_inputbar
map [fullscreen] - search forward
map [fullscreen] = search backward
map [fullscreen] <C--> zoom out
map [fullscreen] <C-=> zoom in
map [fullscreen] <C-p> toggle_presentation
map [fullscreen] <C-f> toggle_fullscreen
map [presentation] q toggle_presentation
map [presentation] e navigate next
map [presentation] u navigate previous
map [index] q toggle_index
map [index] <Tab> toggle_index
map [index] e navigate_index down
map [index] u navigate_index up
map [index] n navigate_index collapse
map [index] i navigate_index expand
map [index] I navigate_index expand-all
map [index] N navigate_index collapse-all
map [index] <Space> navigate_index select
map [index] <Return> navigate_index select
